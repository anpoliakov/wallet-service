<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="create-table-transactions" author="anpoliakov">
        <createTable tableName="transactions" schemaName="entities">
            <column name="transaction_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="amount" type="NUMERIC">
                <constraints nullable="false"/>
            </column>

            <column name="operation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="date" type="DATETIME">
                <constraints nullable="false"/>
            </column>

            <column name="player_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseColumnNames="player_id"
                baseTableName="transactions"
                constraintName="fk_transactions_players"
                referencedColumnNames="players_id"
                referencedTableName="players"
                referencedTableSchemaName="entities"
                baseTableSchemaName="entities"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseColumnNames="operation_id"
                baseTableName="transactions"
                constraintName="fk_transactions_operations"
                referencedColumnNames="operation_id"
                referencedTableName="operations"
                referencedTableSchemaName="entities"
                baseTableSchemaName="entities"/>
    </changeSet>

</databaseChangeLog>